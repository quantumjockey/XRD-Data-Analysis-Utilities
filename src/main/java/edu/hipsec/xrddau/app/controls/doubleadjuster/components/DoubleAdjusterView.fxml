<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.hipsec.xrddau.app.controls.doubleadjuster.components.DoubleAdjusterController">
    <children>
        <HBox styleClass="hbox-2">
            <children>
                <Button onAction="#decrement" text="-" />
                <TextField fx:id="value" />
                <Button onAction="#increment" text="+" />
            </children>
        </HBox>
        <Slider fx:id="adjustment"/>
    </children>
</fx:root>
