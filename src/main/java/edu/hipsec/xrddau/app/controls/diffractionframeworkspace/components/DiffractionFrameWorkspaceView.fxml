<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>

<?import edu.hipsec.xrddau.app.controls.diffractionframepalette.DiffractionFramePalette?>
<fx:root fx:id="viewportTitle" alignment="TOP_CENTER" animated="false" collapsible="false" contentDisplay="CENTER" type="javafx.scene.control.TitledPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.hipsec.xrddau.app.controls.diffractionframeworkspace.components.DiffractionFrameWorkspaceController">
    <content>
        <TabPane>
            <tabs>
                <Tab text="Diffraction Frame" closable="false">
                    <DiffractionFramePalette fx:id="framePalette" />
                </Tab>
                <Tab text="Diffraction Pattern" closable="false">
                    <HBox>
                        <children>
                            <LineChart fx:id="diffractionPattern" prefHeight="600" prefWidth="800">
                                <xAxis>
                                    <NumberAxis label="2-Theta" />
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Intensity (counts)" />
                                </yAxis>
                            </LineChart>
                        </children>
                    </HBox>
                </Tab>
            </tabs>
        </TabPane>
    </content>
</fx:root>
