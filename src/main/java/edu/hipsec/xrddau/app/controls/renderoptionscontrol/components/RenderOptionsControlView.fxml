<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.VBox" styleClass="vbox-5" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.hipsec.xrddau.app.controls.renderoptionscontrol.components.RenderOptionsControlController">
    <children>
        <VBox styleClass="vbox-5">
            <children>
                <ChoiceBox fx:id="availableImageTypes" />
                <ChoiceBox fx:id="availableRamps" />
            </children>
        </VBox>
        <HBox fx:id="adaptiveRenderControl" styleClass="hbox-5">
            <children>
                <Label text="Adaptive Rendering:" />
                <CheckBox fx:id="adaptiveRendering" />
            </children>
        </HBox>
        <HBox styleClass="hbox-5">
            <children>
                <Label text="Pixel Zero Offset:" />
                <Label fx:id="scaleOffsetDisplay" />
            </children>
        </HBox>
    </children>
</fx:root>
