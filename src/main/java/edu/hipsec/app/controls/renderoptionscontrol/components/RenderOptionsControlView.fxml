<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.hipsec.app.controls.renderoptionscontrol.components.RenderOptionsControlController">
    <children>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <ChoiceBox fx:id="availableRamps" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Adaptive Rendering:" />
                <CheckBox fx:id="adaptiveRendering" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Pixel Zero Offset:" />
                <Label fx:id="scaleOffsetDisplay" />
            </children>
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</fx:root>
