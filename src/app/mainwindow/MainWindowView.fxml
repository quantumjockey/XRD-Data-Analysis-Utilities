<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import app.martiffviewport.MARTiffViewport?>

<?import javafx.geometry.Insets?>
<?import app.multipleimagesubtractor.MultipleImageSubtractor?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.mainwindow.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
           <menus>
               <Menu text="File">
                   <items>
                       <MenuItem onAction="#getDirectoryToDisplay" text="Open Folder..." />
                       <SeparatorMenuItem />
                       <MenuItem onAction="#exitApplication" text="Exit" />
                    </items>
               </Menu>
           </menus>
        </MenuBar>
    </top>
    <center>
        <ScrollPane vbarPolicy="ALWAYS" hbarPolicy="NEVER">
            <VBox>
              <children>
                  <MARTiffViewport fx:id="selectedImageViewport" />
                  <MARTiffViewport fx:id="subtractedImageViewport" />
                  <MARTiffViewport fx:id="resultantImageViewport" />
              </children>
            </VBox>
        </ScrollPane>
    </center>
    <right>
        <Accordion maxWidth="450" fx:id="toolsContainer">
            <panes>
                <TitledPane text="Single-Image Subtraction">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                                    <children>
                                        <Label text="Root Path:" />
                                        <Label fx:id="rootPath" prefWidth="225"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                                    <children>
                                        <Label text="Base Image:" />
                                        <ComboBox fx:id="selectedPath" prefWidth="225"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                                    <children>
                                        <Label text="Subtracted Image:" />
                                        <ComboBox fx:id="subtractedPath" prefWidth="225"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="Multiple-Image Subtraction (Automated)">
                    <MultipleImageSubtractor fx:id="multipleImageWorkspace" />
                </TitledPane>
            </panes>
        </Accordion>
    </right>
</BorderPane>
