<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.TextField?>
<fx:root type="javafx.scene.layout.VBox"  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.multipleimagesubtractor.components.MultipleImageSubtractorController" >
    <children>
        <VBox alignment="TOP_CENTER" spacing="5.0">
            <children>
                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Label text="Root Path:" />
                        <Label fx:id="rootPath" prefWidth="225"/>
                    </children>
                </HBox>
                <TitledPane alignment="CENTER" collapsible="false" text="Base Image(s)">
                    <content>
                        <ListView fx:id="selectedPath" prefHeight="300" prefWidth="350" />
                    </content>
                </TitledPane>
                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Label text="Subtracted Image:" />
                        <ComboBox fx:id="subtractedPath" prefWidth="225"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Label text="Lower Bound:" />
                        <TextField fx:id="lowerBoundFilter" prefWidth="225"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Label text="Upper Bound:" />
                        <TextField fx:id="upperBoundFilter" prefWidth="225"/>
                    </children>
                </HBox>
                <Button onAction="#subtractImageGroup" text="Subtract Selected Images" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </children>
</fx:root>