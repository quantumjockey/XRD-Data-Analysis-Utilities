<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="app.MainWindow.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Open Folder..." onAction="#GetDirectoryToDisplay"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit" onAction="#ExitApplication"/>
        </Menu>
    </MenuBar>
    <HBox>
        <ImageView fx:id="selectedImageViewPort" fitHeight="600" fitWidth="600"/>
        <TableView fx:id="availableImages">
            <columns>
                <TableColumn fx:id="path" text="File" prefWidth="400">
                </TableColumn>
            </columns>
        </TableView>
    </HBox>
</VBox>
