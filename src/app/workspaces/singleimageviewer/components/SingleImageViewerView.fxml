<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import app.controls.martiffviewport.MARTiffViewport?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>

<fx:root type="javafx.scene.layout.VBox"  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.workspaces.singleimageviewer.components.SingleImageViewerController" >
    <children>
        <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label text="Root Path:" />
                <Label fx:id="rootPath" />
            </children>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
        </HBox>
        <HBox>
            <children>
                <ScrollPane vbarPolicy="AS_NEEDED" hbarPolicy="AS_NEEDED">
                    <content>
                        <VBox>
                            <children>
                                <MARTiffViewport fx:id="selectedImageViewport" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Image Selected for Viewing" />
                        <TreeView fx:id="selectedPath" prefWidth="400" VBox.vgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</fx:root>
