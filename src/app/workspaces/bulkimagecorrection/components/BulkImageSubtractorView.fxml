<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import app.controls.filegroupselector.FileGroupSelector?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.workspaces.bulkimagecorrection.components.BulkImageSubtractorController">
    <children>
        <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label text="Root Path:" />
                <Label fx:id="rootPath" />
            </children>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
        </HBox>
        <HBox spacing="5.0" VBox.Vgrow="ALWAYS">
            <children>
                <FileGroupSelector fx:id="diffractionImagePath" VBox.vgrow="ALWAYS" />
                <FileGroupSelector fx:id="darkFieldImagePath" VBox.vgrow="ALWAYS" />
                <VBox alignment="TOP_CENTER" spacing="5.0">
                    <children>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                            <children>
                                <Label text="Low Intensity Bound:" />
                                <TextField fx:id="lowerBoundFilter" prefWidth="225" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                            <children>
                                <Label text="High Intensity Bound:" />
                                <TextField fx:id="upperBoundFilter" prefWidth="225" />
                            </children>
                        </HBox>
                        <Button onAction="#subtractImageGroup" text="Subtract Selected Images" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</fx:root>
